<div class="under">新規会員登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="text-center">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="name-field">
      <%= f.label :お名前 %><br />
      <%= f.text_field :name, autofocus: true, :placeholder => "お名前を入力して下さい", autocomplete: "name" %>
    </div>

    <div class="email-field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレスを入力して下さい", autocomplete: "email" %>
    </div>

    <div class="password-field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, :placeholder => "パスワードを入力して下さい", autocomplete: "new-password" %>
    </div>

    <div class="password-field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, :placeholder => "上記のパスワードを再入力して下さい", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録情報を送信する", class: "btn btn-primary btn-lg" %>
    </div>
  </div>

<% end %>