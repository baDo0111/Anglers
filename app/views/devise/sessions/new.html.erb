<div class="under">ログイン</div>

<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="email-field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレスを入力して下さい" , autocomplete: "email" %>
    </div>

    <div class="password-field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, :placeholder => "パスワードを入力して下さい",autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
    </div>

  <% end %>

</div>
