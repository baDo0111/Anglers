<!DOCTYPE html>
<html>
  <head>
    <title>Anglers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= render 'layouts/header' %>

  <div class="container">
    <body>
      <div class="flash-massege">
        <div class="flash-massege__notice">
          <%= flash[:notice] %>
        </div>
        <div class="flash-massege__alert">
          <%= flash[:alert] %>
        </div>
      </div>

      <%= yield %>

      <span id="back">
        <a href="#">
          <%= image_tag '/assets/arrow.png' %>
        </a>
      </span>

    </body>
  </div>

  <%= render 'layouts/footer' %>

</html>