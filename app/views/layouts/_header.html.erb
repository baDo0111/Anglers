<header class="header">

    <div class="header__logo-img">
      <%= link_to root_path do %>
        <%= image_tag 'Anglers-logo.png', class: "size" %>
      <% end %>
    </div>

    <div id="HB-Menu">
      <h2>MENU</h2>

      <% if user_signed_in? %>
        <ul>
          <li>
            <%= link_to root_path, class: "header__link" do %>
              <i class="fas fa-home"> ホームに戻る</i>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_path(current_user.id), class: "header__link" do %>
              <i class="fas fa-users-cog"> ユーザー情報編集</i>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "header__link" do %>
              <i class="fas fa-sign-out-alt"> ログアウト</i>
            <% end %>
          </li>

        </ul>

      <% else %>

        <ul>
          <li>
            <%= link_to root_path, class: "header__link" do %>
              <i class="fas fa-home"> ホームに戻る</i>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "header__link" do %>
              <i class="fas fa-users"> 新規会員登録</i>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "header__link" do %>
              <i class="fas fa-sign-in-alt"> ログイン</i>
            <% end %>
          </li>
        </ul>

      <% end %>
    </div>

    <div id="HB-icon">

    </div>

    <div class="header__list">

      <% if user_signed_in? %>

        <div class="header__item">
          <%= link_to root_path, class: "header__link" do %>
            <i class="fas fa-home"> ホームに戻る</i>
          <% end %>
        </div>

        <div class="header__item">
          <%= link_to edit_user_path(current_user.id), class: "header__link" do %>
            <i class="fas fa-users-cog"> ユーザー情報編集</i>
          <% end %>
        </div>

        <div class="header__item">
          <%= link_to destroy_user_session_path, method: :delete, class: "header__link" do %>
            <i class="fas fa-sign-out-alt"> ログアウト</i>
          <% end %>
        </div>

      <% else %>

        <div class="header__item">
          <%= link_to root_path, class: "header__link" do %>
            <i class="fas fa-home"> ホームに戻る</i>
          <% end %>
        </div>

        <div class="header__item">
          <%= link_to new_user_registration_path, class: "header__link" do %>
            <i class="fas fa-users"> 新規会員登録</i>
          <% end %>
        </div>

        <div class="header__item">
          <%= link_to new_user_session_path, class: "header__link" do %>
            <i class="fas fa-sign-in-alt"> ログイン</i>
          <% end %>
        </div>

      <% end %>
    </div>
</header>