<h1 class="text-center">
	<span class="under">ユーザー情報編集画面</span>
</h1>

<%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :ユーザー名 %><br>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="form-group">
      <%= attachment_image_tag @user, :user_image, size: "300x300", fallback: "no_image.jpg", id:"img1" %>
      <%= f.attachment_field :user_image, id:"myfile" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autofocus: true %>
    </div>


    <div class="actions">
    <%= f.submit "Update User", class: "btn btn-primary" %>
    </div>
<% end %>